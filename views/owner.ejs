                    <td><input type="text" id="rWheat" name="Wheat"></td>
                </tr>
                <tr>
                    <td><label for="rSoy"><h3>Soy</h3></label></td>
                    <td><input type="text" id="rSoy" name="Soy"></td>
                </tr>
                <tr>
                    <td><label for="rSesame"><h3>Sesame</h3></label></td>
                    <td><input type="text" id="rSesame" name="Sesame"></td>
                </tr>

        .content {
            display: none;
            overflow: hidden;
        }
        .table {
            margin-left: 40%;
        }
    </style>
    
    <body>
        <img src="Images/MealMatesLogo.png" style="width:250px;height:250px">
        <button class= "home" onclick="document.location='index'"><b>Home</b></button>
        <button class= "about" onclick="document.location='about'"><b>About</b></button>
        <button class= "account" onclick="document.location='account-signed-in'"><b>Account</b></button>
        <br>
        <br>
        <br>
        <h1>Hello!</h1>
        <br>
        <hr>

        <form class="former" action="/comparisons" method="POST">
        <button type="button" class="collapsible"><h3>Set Allergens</h3></button>
        
        <div class="content">
            <br>
            <div style="margin-left: 10%">
                <table>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td>
                            <input type="button" class= "milk" name="Milk" onclick="setPrefMilk()" value="i"></input>
                        </td>
                        <td>
                            <h3>Milk</h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button class= "eggs" name="Eggs" id="Eggs" onclick="setPrefEggs()"></button>
                        </td>
                        <td>
                            <h3>Eggs</h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button class= "peanuts" name="Peanuts" id="Peanuts" onclick="setPrefPeanuts()"></button>
                        </td>
                        <td>
                            <h3>Peanuts</h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button class= "treenuts" name="Treenut" id="Treenut" onclick="setPrefTreeNuts()"></button>
                        </td>
                        <td>
                            <h3>Tree Nuts</h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button class= "fish" name="Fish" id="Fish" onclick="setPrefFish()"></button>
                        </td>
                        <td>
                            <h3>Fish</h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button class= "crustaceans" name="Shellfish" id="Shellfish" onclick="setPrefCrustaceans()"></button>
